<?xml-stylesheet href="html.xslt" type="text/xsl"?>
<man name="raw2voc" long-name="ScummC's raw to VOC converter">

  <description>
    <cmd>raw2voc</cmd> allow to convert a raw sample to VOC.
    It only support 8 bit unsigned mono samples.
  </description>

  <command name="raw2voc">
    <param-group name="options">
      <param name="o" arg="output.voc" default="output.voc">
        Set the output file name.
      </param>
      <param name="r" arg="rate" required="true">
        Set the samplerate.
      </param>
    </param-group>
    <file name="input.raw" required="true"/>
  </command>

</man>
