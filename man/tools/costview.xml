<?xml-stylesheet href="html.xslt" type="text/xsl"?>
<man name="costview" long-name="ScummC's costume viewer">

  <description>
    <cmd>costview</cmd> allow inspecting SCUMM costumes. A palette is
    required to properly display the costume. It can be loaded from a
    SCUMM PALS block or a BMP image.
  </description>

  <command name="costview">
    <param-group name="options">
      <param name="pals" arg="file.pals" default="default.pals">
        Use the palette from a SCUMM PALS block.
      </param>
      <param name="bmp" arg="file.bmp">
        Use the palette from a BMP image.
      </param>
    </param-group>
    <file name="file.cost" required="true"/>
  </command>

  <see-also>
    <cmd>cost</cmd>
  </see-also>

</man>
