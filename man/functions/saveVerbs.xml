<?xml-stylesheet href="html.xslt" type="text/xsl"?>
	
<man name="saveVerbs" long-name="Save/restore the verbs fromVerb to toVerb in to/from the given save slot">
	<description>	
	
	
	Save/restore the verbs fromVerb to toVerb in to/from the given save slot.
	
	
	</description>
	<command name="saveVerbs">
		<file name="fromVerb" required="true"/>
		<file name="toVerb" required="true"/>
		<file name="slot" required="true"/>
		<file name="restoreVerbs(fromVerb" required="true"/>
		<file name="toVerb" required="true"/>
		<file name="slot)" required="true"/>
	</command>
	<see-also>
<cmd>saveLoadThing</cmd>, <cmd>saveSound</cmd>	</see-also>
</man>