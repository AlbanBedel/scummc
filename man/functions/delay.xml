<?xml-stylesheet href="html.xslt" type="text/xsl"?>
	
<man name="delay" long-name="Break the current script for some times">
	<description>	
	
	
	Break the current script for some times. A tick is 1/60th of a second.
	
	
	</description>
	<command name="delay">
		<file name="ticks" required="true"/>
		<file name="delaySeconds(sec)" required="true"/>
		<file name="delayMinutes(min)" required="true"/>
	</command>
</man>