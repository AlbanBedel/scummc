<?xml-stylesheet href="html.xslt" type="text/xsl"?>
	
<man name="doSentence" long-name="Prepare a sentence">
	<description>	
	
	
	Prepare a sentence. The sentence script is then called with verb, objA and
	objB as argument. objB might be 0.
	
	
	</description>
	<command name="doSentence">
		<file name="verb" required="true"/>
		<file name="objA" required="true"/>
		<file name="dummy" required="true"/>
		<file name="objB" required="true"/>
	</command>
</man>