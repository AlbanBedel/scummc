<?xml-stylesheet href="html.xslt" type="text/xsl"?>
<man name="imgremap" long-name="ScummC's color remapper">

  <description>
    <cmd>imgremap</cmd> allow swapping two colors in a BMP file.
    The output is saved in a file name $input.map.
    This tool is mostly useful to fix inverted mask images.
  </description>

  <command name="imgremap">
    <param-group name="options">
      <param name="from" arg="c" required="true">
        Set the first color.
      </param>
      <param name="to" arg="c" required="true">
        Set the second color.
      </param>
    </param-group>
    <file name="input.bmp" required="true" repeat="true"/>
  </command>

  <see-also>
    <cmd>imgsplit</cmd>, <cmd>palcat</cmd>
  </see-also>

</man>
