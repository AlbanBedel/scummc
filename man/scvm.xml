<?xml-stylesheet href="html.xslt" type="text/xsl"?>
<man name="scvm" long-name="ScummC's VM">

  <description>
    <cmd>scvm</cmd> is VM for SCUMM version 6 with debugging features.
    It is currently under development and far from finished.
  </description>

  <command name="scvm">
    <param-group name="options">
      <param name="dir" arg="path" default=".">
        Directory where the datafiles are found.
      </param>
      <param name="key" arg="k">
        Decryption key to use when reading the datafiles.
      </param>
      <param name="dbg">
        Run in debugger mode.
      </param>
    </param-group>
    <file name="basename" required="true"/>
  </command>

</man>
